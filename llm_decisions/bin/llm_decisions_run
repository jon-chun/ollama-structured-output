#!/usr/bin/env python3

"""
Command-line entry point for the LLM Decisions framework.
This script provides a clean way to execute the main program
without interference from setuptools' command-line parsing.
"""

import sys
import asyncio
from pathlib import Path

# Add the parent directory to Python path to allow direct execution
parent_dir = Path(__file__).resolve().parent.parent
sys.path.append(str(parent_dir))

from llm_decisions.main import main

if __name__ == "__main__":
    # Set up any command line argument parsing here if needed
    asyncio.run(main())